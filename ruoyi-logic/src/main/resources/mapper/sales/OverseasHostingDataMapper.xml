    <!-- 获取总体统计数据 -->
    <select id="selectSummaryByTotal" resultType="java.util.Map">
        SELECT
            COALESCE(SUM(revenue), 0) as total_revenue,
            COALESCE(SUM(refund), 0) as total_refund,
            COALESCE(SUM(purchase_cost), 0) as total_purchase_cost,
